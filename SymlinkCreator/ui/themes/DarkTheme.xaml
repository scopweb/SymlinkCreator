<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ========== SIMPLE COLOR PALETTE ========== -->
  <Color x:Key="AppBackgroundColor">#1E1E2E</Color>
  <Color x:Key="AppSurfaceColor">#181825</Color>
  <Color x:Key="AppTextColor">#CDD6F4</Color>
  <Color x:Key="AppBorderColor">#45475A</Color>
  <Color x:Key="AppAccentColor">#89B4FA</Color>

  <!-- ========== BRUSHES (ABSOLUTE MINIMUM) ========== -->
  <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E2E" />
  <SolidColorBrush x:Key="AppSurfaceBrush" Color="#181825" />
  <SolidColorBrush x:Key="AppBorderBrush" Color="#45475A" />
  <SolidColorBrush x:Key="AppTextBrush" Color="#CDD6F4" />
  <SolidColorBrush x:Key="AppSubtextBrush" Color="#BAC2DE" />
  <SolidColorBrush x:Key="AppMutedBrush" Color="#6C7086" />
  <SolidColorBrush x:Key="AppAccentBrush" Color="#89B4FA" />
  <SolidColorBrush x:Key="AppAccentHoverBrush" Color="#B4D0FF" />
  <SolidColorBrush x:Key="AppOverlayBrush" Color="#313244" />
  <SolidColorBrush x:Key="AppSuccessBrush" Color="#A6E3A1" />
  <SolidColorBrush x:Key="AppErrorBrush" Color="#F38BA8" />
  <SolidColorBrush x:Key="AppYellowBrush" Color="#F9E2AF" />
  <SolidColorBrush x:Key="AppAccentSemiTransparentBrush" Color="#89B4FA" Opacity="0.3" />
  <SolidColorBrush x:Key="AppOverlaySemiTransparentBrush" Color="#313244" Opacity="0.5" />

  <!-- ========== WINDOW STYLE ========== -->
  <Style TargetType="{x:Type Window}">
    <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}" />
    <Setter Property="Foreground" Value="{StaticResource AppTextBrush}" />
    <Setter Property="FontFamily" Value="Segoe UI" />
    <Setter Property="FontSize" Value="12" />
  </Style>

  <!-- ========== BUTTON STYLE ========== -->
  <Style TargetType="{x:Type Button}">
    <Setter Property="Background" Value="#313244" />
    <Setter Property="Foreground" Value="#CDD6F4" />
    <Setter Property="BorderBrush" Value="#45475A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="12,6" />
    <Setter Property="FontFamily" Value="Segoe UI" />
    <Setter Property="Cursor" Value="Hand" />
  </Style>

  <!-- ========== TEXTBOX STYLE ========== -->
  <Style TargetType="{x:Type TextBox}">
    <Setter Property="Background" Value="#181825" />
    <Setter Property="Foreground" Value="#CDD6F4" />
    <Setter Property="BorderBrush" Value="#45475A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="8,6" />
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>

  <!-- ========== LABEL STYLE ========== -->
  <Style TargetType="{x:Type Label}">
    <Setter Property="Foreground" Value="#BAC2DE" />
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>

  <!-- ========== TEXTBLOCK STYLE ========== -->
  <Style TargetType="{x:Type TextBlock}">
    <Setter Property="Foreground" Value="#CDD6F4" />
    <Setter Property="FontFamily" Value="Segoe UI" />
  </Style>

</ResourceDictionary>
