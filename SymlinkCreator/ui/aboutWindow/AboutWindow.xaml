<Window x:Class="SymlinkCreator.ui.aboutWindow.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SymlinkCreator.ui.aboutWindow"
        xmlns:core="clr-namespace:SymlinkCreator.core"
        mc:Ignorable="d"
        Title="About Symlink Creator"
        Width="500"
        Height="auto"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource AppSurfaceBrush}"
        Foreground="{StaticResource AppTextBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Application Title and Version -->
        <TextBlock Grid.Row="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,8">
            <Run Foreground="{StaticResource AppAccentBrush}">Symlink Creator</Run>
            <Run Foreground="{StaticResource AppSubtextBrush}">v1.4.0</Run>
        </TextBlock>

        <!-- Original Author -->
        <TextBlock Grid.Row="1"
                   Text="Originally developed by Arnob Paul"
                   Foreground="{StaticResource AppSubtextBrush}"
                   Margin="0,0,0,4"
                   TextWrapping="Wrap" />

        <!-- Description -->
        <TextBlock Grid.Row="2"
                   Text="A GUI application for creating Windows NTFS symbolic links with support for multiple file/folder creation, relative paths, and agent folder replication."
                   Foreground="{StaticResource AppTextBrush}"
                   Margin="0,12,0,12"
                   TextWrapping="Wrap"
                   LineHeight="18" />

        <!-- Fork Information -->
        <Border Grid.Row="3"
                Background="{StaticResource AppOverlayBrush}"
                BorderBrush="{StaticResource AppBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12">
            <StackPanel>
                <TextBlock Text="Enhanced Fork"
                           Foreground="{StaticResource AppAccentBrush}"
                           FontWeight="SemiBold"
                           FontSize="11"
                           Margin="0,0,0,4" />
                <TextBlock Text="This is a fork with enhanced configuration options including:  configurable default source and destination paths. For more information, visit:"
                           Foreground="{StaticResource AppTextBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,8" />
                <TextBlock>
                    <Hyperlink NavigateUri="{x:Static core:ApplicationConfiguration.CompanyWebAddressUri}"
                               Click="Hyperlink_OnClick"
                               Foreground="{StaticResource AppAccentBrush}">
                        <TextBlock Text="{x:Static core:ApplicationConfiguration.CompanyWebAddress}" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="4"
                   Text="Thank you for using Symlink Creator!"
                   Foreground="{StaticResource AppMutedBrush}"
                   Margin="0,16,0,16"
                   TextAlignment="Center"
                   FontSize="11" />

        <!-- Close Button -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Close"
                    Click="OkButton_OnClick"
                    Width="80"
                    IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
