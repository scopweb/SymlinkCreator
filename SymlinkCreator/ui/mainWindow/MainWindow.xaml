<Window x:Class="SymlinkCreator.ui.mainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SymlinkCreator.ui.mainWindow"
        xmlns:core="clr-namespace:SymlinkCreator.core"
        mc:Ignorable="d"
        Title="Symlink Creator v1.4.0"
        MinWidth="700"
        MinHeight="400"
        Width="850"
        Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- CUSTOM TITLE BAR -->
        <Border Grid.Row="0" Background="#0A0A0E" Height="32" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid VerticalAlignment="Center" Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Symlink Creator v1.4.0" Foreground="#FFFFFF" FontSize="12" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="−" Width="36" Height="32" Padding="0" Click="MinimizeButton_Click" Background="#0A0A0E" Foreground="#FFFFFF" BorderThickness="0" />
                    <Button Content="□" Width="36" Height="32" Padding="0" Click="MaximizeButton_Click" Background="#0A0A0E" Foreground="#FFFFFF" BorderThickness="0" />
                    <Button Content="✕" Width="36" Height="32" Padding="0" Click="CloseButton_Click" Background="#0A0A0E" Foreground="#FFFFFF" BorderThickness="0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Source Files/Folders -->
            <Grid Grid.Column="0" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Source files or folders"
                           Foreground="{StaticResource AppSubtextBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <Border Grid.Row="1" BorderBrush="{StaticResource AppBorderBrush}"
                        BorderThickness="1" CornerRadius="4" Padding="0"
                        Background="{StaticResource AppSurfaceBrush}">
                    <ListView x:Name="SourceFileOrFolderListView"
                              ItemsSource="{Binding FileOrFolderList}"
                              AllowDrop="True"
                              Drop="SourceFileOrFolderListView_OnDrop"
                              Margin="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           ToolTip="{Binding}"
                                           TextWrapping="NoWrap"
                                           Margin="4,2" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0"
                            HorizontalAlignment="Left">
                    <Button Content="Add files" Click="AddFilesButton_OnClick" Margin="0,0,4,0" />
                    <Button Content="Add folders" Click="AddFoldersButton_OnClick" Margin="0,0,4,0" />
                    <Button Content="Remove selected" Click="RemoveSelectedButton_OnClick" Margin="0,0,4,0" />
                    <Button Content="Clear" Click="ClearListButton_OnClick" />
                </StackPanel>
            </Grid>

            <!-- VERTICAL DIVIDER -->
            <Border Grid.Column="1"
                    Width="1"
                    Background="{StaticResource AppBorderBrush}"
                    Margin="0,12" />

            <!-- RIGHT PANEL: Destination & Options -->
            <Grid Grid.Column="2" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Destination Path Label -->
                <TextBlock Grid.Row="0" Text="Destination path"
                           Foreground="{StaticResource AppSubtextBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <!-- Destination Path Input -->
                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding DestinationPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="{Binding DestinationPath}"
                             AllowDrop="True"
                             Drop="DestinationPathTextBox_OnDrop"
                             PreviewDrop="DestinationPathTextBox_OnDrop"
                             PreviewDragOver="DestinationPathTextBox_OnPreviewDragOver"
                             Margin="0" />

                    <Button Grid.Column="1" Content="Browse"
                            Click="DestinationPathBrowseButton_OnClick"
                            Margin="4,0,0,0" />
                </Grid>

                <!-- Options Separator -->
                <Separator Grid.Row="2" Margin="0,8" />

                <!-- Options Section -->
                <StackPanel Grid.Row="3" Margin="0,8,0,0">
                    <TextBlock Text="Options"
                               Foreground="{StaticResource AppSubtextBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                    <CheckBox Content="Use relative path if possible"
                              IsChecked="{Binding ShouldUseRelativePath}"
                              ToolTip="Create relative symlinks when source and destination are on the same drive"
                              Margin="0,0,0,6" />

                    <CheckBox Content="Retain script file after execution"
                              IsChecked="{Binding ShouldRetainScriptFile}"
                              ToolTip="Keep the generated batch script for logging purposes"
                              Margin="0,0,0,6" />

                    <CheckBox Content="Hide successful operation dialog"
                              IsChecked="{Binding HideSuccessfulOperationDialog}"
                              ToolTip="Only show dialogs when errors occur"
                              Margin="0,0,0,6" />

                    <CheckBox Content="Replicate links into agent folders"
                              IsChecked="{Binding ReplicateToAgentFolders}"
                              ToolTip="Create symlinks in .agent/skills, .agents/skills, and .claude/skills" />
                </StackPanel>

                <!-- Action Button -->
                <Button Grid.Row="4"
                        x:Name="CreateSymlinksButton"
                        Click="CreateSymlinksButton_OnClick"
                        Background="#1A1A20"
                        Foreground="#FFFFFF"
                        FontWeight="SemiBold"
                        Margin="0,12,0,0"
                        Padding="16,10"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image x:Name="CreateSymlinksButtonImage" Height="16" Width="16" Margin="0,0,8,0" />
                        <TextBlock Text="Create symlinks" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- FOOTER BAR -->
        <Border Grid.Row="2"
                Background="{StaticResource AppSurfaceBrush}"
                BorderBrush="{StaticResource AppBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12">
            <Button Content="About"
                    Click="AboutButton_OnClick"
                    HorizontalAlignment="Left"
                    Width="100" />
        </Border>
    </Grid>
</Window>
